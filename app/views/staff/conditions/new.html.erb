<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h1 class="mt-3 mb-4">体調登録</h1>
      <% if @condition.errors.any? %>
        <%= @condition.errors.count %>件のエラーが発生しました
        <ul>
          <% @condition.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @condition, url: conditions_path, method: :post do |f| %>
        <div class="row">
          <div class="d-flex flex-row">
            <h5>・体調</h5>
            <div class="form-group ml-4 mr-2">
              <%= f.radio_button :status, Condition.statuses.key(0) %>
              <%= f.label :status, Condition.statuses_i18n[:usually] %>
            </div>
            <div class="form-group mr-2">
              <%= f.radio_button :status, Condition.statuses.key(1) %>
              <%= f.label :status, Condition.statuses_i18n[:good] %>
            </div>
            <div class="form-grop mr-2">
              <%= f.radio_button :status, Condition.statuses.key(2) %>
              <%= f.label :status, Condition.statuses_i18n[:bad] %>
            </div>
          </div>
        </div>
        <div class="row" >
          <div class="form-group d-flex flex-row">
            <h5 class="mr-2">・体温</h5>
            <div class="col-md-6 d-flex flex-row">
              <%= f.text_field :temperature, class: "form-control" %><span>℃</span>
            </div>
          </div>
        </div>
        <div class="row">
          <h5>・補足説明</h5>
          <div class="form-group col-lg-8">
            <%= f.text_area :explation, class: "form-control" %>
          </div>
        </div>
        <div class="row justify-content-end">
          <div class="form-group">
            <%= f.submit "保存する", class: "btn btn-success btn-lg " %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
