<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "staff/shared/error_messages", resource: resource %>

  <div class="field">
    社員名
    <%= f.label "姓" %>
    <%= f.text_field :first_name %>

    <%= f.label "名" %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    社員名（フリガナ）
    <%= f.label "セイ" %>
    <%= f.text_field :first_name_kana %>

    <%= f.label "メイ" %>
    <%= f.text_field :last_name_kana %>
  </div>
  <div class="field">
    所属課
    <%= f.select :section_id, options_from_collection_for_select(Section.all, :id, :section_name) %>
  </div>
  <div clas="field">
    生年月日
    <%= f.label "年（西暦）" %>
    <%= f.text_field :birth_year %>

    <%= f.label "月" %>
    <%= f.text_field :birth_month %>

    <%=f.label "日" %>
    <%= f.text_field :birth_day %>
  </div>
  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（再入力）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "staff/shared/links" %>
