
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2 class="mt-3 mb-4">部門登録</h2>
      <% if @section.errors.any? %>
        <%= @section.errors.count %>件のエラーが発生しました
        <ul>
          <% @section.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @section, url: admin_sections_path, method: :post  do |f| %>
        <div class="row justify-content-center">
          <div class="col-3">
            <%= f.text_field :section_name, class: "form-control", placeholder: "部門名" %>
          </div>
          <div class="col-3">
            <%= f.submit "保存する", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
      <div class="row mt-4">
        <h2 class="mt-2 mb-3">部門一覧</h2>
        <table class="table text-center">
          <tbody>
            <% @sections.each do |section| %>
            <tr>
              <td><%= section.section_name %></td>
              <td><%= link_to "編集する", edit_admin_section_path(section.id), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
          </tbody>
       </table>
      </div>
    </div>
  </div>
</div>