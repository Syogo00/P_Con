<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1 class="mt-3 mb-4">体調登録履歴</h1>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ID</th>
            <th>社員名</th>
            <th>所属課</th>
            <th>登録日時</th>
            <th>体調</th>
            <th>補足説明</th>
          </tr>
        </thead>
        <tbody>
          <% @condition.each do |condition| %>
          <tr>
            <td><%= condition.member_id %></td>
            <td>
              <%= link_to admin_member_path(condition.member_id) do %>
                <%= condition.member.first_name %><%= condition.member.last_name %>
              <% end %>
            </td>
            <td><%= condition.member.section.section_name %></td>
            <td><%= condition.created_at.to_s(:datetime_jp) %></td>
            <td><%= condition.status_i18n %></td>
            <td><%= condition.explation %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
